pipeline{
    agent{
        docker {
            image 'maven:3.6.1-jdk-8-slim'
        }
    }

    stages{
        stage('build'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Building worker app"
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Running tests on the build"
                dir('result'){
                    sh 'npm test'
                }
            }
        }
    }
    post{
        always{
            echo "Done with the build"
        }
    }
}