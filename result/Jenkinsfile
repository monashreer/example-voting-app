pipeline{
    agent{
        docker {
            image 'nodejs:chakracore-8.11.1'
        }
    }

    stages{
        stage('build'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Building worker app"
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Running tests on the build"
                dir('result'){
                    sh 'npm test'
                }
            }
        }
        stage('package'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo "Packagingg..."
                dir('worker'){
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
    post{
        always{
            echo "Done with the build"
        }
    }
}